<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_main"
    android:orientation="vertical"
    android:paddingLeft="@dimen/indent_16"
    android:paddingRight="@dimen/indent_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/indent_16"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"/>

    <Button
        android:id="@+id/btn_search"
        android:text="@string/search"
        android:layout_marginTop="@dimen/indent_24"
        android:layout_marginBottom="@dimen/indent_16"
        app:icon="@drawable/btn_search"
        style="@style/ButtonStyleMain"/>

    <Button
        android:id="@+id/btn_media"
        android:text="@string/media"
        android:layout_marginBottom="@dimen/indent_16"
        app:icon="@drawable/btn_music"
        style="@style/ButtonStyleMain"/>

    <Button
        android:id="@+id/btn_settings"
        android:text="@string/settings"
        android:layout_marginBottom="28dp"
        app:icon="@drawable/btn_settings"
        style="@style/ButtonStyleMain"/>

</LinearLayout>